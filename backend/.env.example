# ============================================
# DATABASE CONFIGURATION
# ============================================

# Supabase PostgreSQL Connection (Connection Pooling - Use for app)
# Get this from: Supabase Dashboard → Project Settings → Database → Connection string → Connection pooling
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Supabase Direct Connection (Use for migrations)
# Get this from: Supabase Dashboard → Project Settings → Database → Connection string → URI
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# Example for local MySQL (if you want to test locally):
# DATABASE_URL="mysql://username:password@localhost:3306/quickbook_db"

# ============================================
# JWT CONFIGURATION
# ============================================

JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters-long"
JWT_EXPIRES_IN="7d"

# ============================================
# SERVER CONFIGURATION
# ============================================

PORT=3000
NODE_ENV="development"

# ============================================
# CLOUDINARY CONFIGURATION (Optional)
# ============================================
# For image uploads (profile pictures, movie posters, etc.)
# Get credentials from: https://cloudinary.com/console

CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ============================================
# PAYMENT GATEWAY - STRIPE (Optional)
# ============================================
# Get from: https://dashboard.stripe.com/test/apikeys

STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# ============================================
# PAYMENT GATEWAY - RAZORPAY (Optional)
# ============================================
# Get from: https://dashboard.razorpay.com/app/keys

RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_secret"

# ============================================
# CORS CONFIGURATION
# ============================================

FRONTEND_URL="http://localhost:5173"

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file with real credentials
# 3. For Supabase: Always use pooler URL (port 6543) for DATABASE_URL
# 4. Use direct URL (port 5432) for DIRECT_URL (migrations)
# 5. Generate strong JWT_SECRET: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
